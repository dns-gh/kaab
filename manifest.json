{
  "manifest_version": 2,

  "name": "Remove AdBlock restrictions",
  "description": "This extension removes adBlock restrictions on websites",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Remove adBlock restrictions!"
  },

  "content_scripts": [{
      "js": ["content.js"],
      "matches": ["<all_urls>"]
  }],

  "background":
  {
    "scripts":["background.js"]
  }
}